<% provide(:title, "Sign up") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<h1> <%= t "signup_page.title" %> </h1>
	<%= form_for(@user) do |f| %>
		<%= render "shared/error_messages", object: f.object %>
	  <%= f.label :name, t("signup_page.label_name") %>
	  <%= f.text_field :name, class: "form-control" %>

	  <%= f.label :email, t("signup_page.label_email") %>
	  <%= f.email_field :email, class: "form-control"  %>

	  <%= f.label :password, t("signup_page.label_password") %>
	  <%= f.password_field :password, class: "form-control"  %>

	  <%= f.label :password_confirmation, t("signup_page.password_confirmation") %>
	  <%= f.password_field :password_confirmation, class: "form-control"  %>
	  <br>
	  <%= f.submit t("button.create"), class: "btn btn-default pull-right" %>
	<% end %>
  </div>
</div>
