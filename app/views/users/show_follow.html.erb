<% provide :title, @title %>
<div class= "row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravartar_for @user %>
      <h3><%= @user.name %></h3>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <section class="user_avatar">
      <% if @users.any? %>
        <% @users.each do |user| %>
          <%= link_to gravartar_for(user), user %>
        <% end %>
      <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <table class="table">
        <% @users.each do |user| %>
          <tr>
            <td>
              <div class="index_user">
                <strong>
                  <%= link_to user.name, user %>
                </strong>
                <span>Email: <%= user.email%></span>
              </div>
            </td>
          </tr>
        <% end %>
      </table>

      <%= will_paginate %>
    <% end %>
  </div>
</div>
