<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-5">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>

      <section class="stats">
       <%= render "shared/stats" %>
      </section>

      <section class="micropost_form">
        <h3><%= t("micropost.add") %></h3>
        <%= render "shared/micropost_form"%>
      </section>

    </aside>
  <div class="col-md-7">
    <%= render "shared/feed"%>
  </div>
  </div>

<% else %>
  <div class="center jumbotron">
    <h2><%= t("messages_normal.desc_app")%></h2>
    <%= link_to t("button.signup"), users_new_path, class: "btn btn-primary"%>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails Logo"), 'http://rubyonrails.org/'%>
<% end %>
