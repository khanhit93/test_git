<% provide(:title, t("titles.login")) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<h1><%= t("titles.login") %></h1>
	<%= form_for(:session, url: login_path) do |f| %>
	  <%= f.label :email, t("lable.email") %>
      <%= f.email_field :email, class: "form-control" %>

	  <%= f.label :password, t("lable.password") %>
	  <%= link_to t("label.forget"),  new_password_reset_path %>
	  <%= f.password_field :password, class: "form-control" %>
	  <br>
	  <%= f.label :remember_me, class: "checkbox inline" do %>
	  	<%= f.check_box :remember_me %>
	  	<span><%= t("label.remember")%></span>
	  <% end %>
	  <%= f.submit t("button.login"), class: "btn btn-default pull-right" %>
	<% end %>
	<br>
	<p>You are new member ? <%= link_to t("button.signup"), signup_path %></p>
  </div>
</div>
